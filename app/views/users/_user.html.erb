<div class="col-sm-3 single-user-card" id=<%= user_path(user.id) %>>
  <div class="card">
    <div class="card-block">
      <h4 class="user-name">
        <%= truncate(user.name, :length => 60) %>
      </h4>
      <div class="user-content">
        <p><%= user.email %></p>
        <p>Created at <%= user.created_at %></p>
        <p>Updated at <%= user.updated_at %></p>
      </div>
    </div>
  </div><!-- card -->
</div><!-- col-sm-3 -->
